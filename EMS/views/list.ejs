<%- include("header") %>
<%- include("navbar") %>
<div class="container">
  <% if (employees.length > 0) { %>
    <div class="row">
      <h2>Employee List</h2>
    </div>
    <div class="row">
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
          </tr>
        </thead>
        <tbody>
          <% employees.forEach( (item) => { %>
          <tr>
            <td><%= item.firstName %></td>
            <td><%= item.lastName %></td>
            <td><a href="/view/<%= item.lastName %>">VIEW</a></td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
    <%}else {%>
      <div>No entries</div>
  <%}%>

  <div class="row">
    <a class="btn btn-primary" href="/new" role="button">Add employees</a></div>
    <%- include("footer") %>
</div>
